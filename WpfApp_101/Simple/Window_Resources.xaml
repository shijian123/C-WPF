<Window x:Class="WpfApp_101.Simple.Window_Resources"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_101.Simple"
        mc:Ignorable="d"
        Title="Window_Resources" Height="450" Width="800">
    <Window.Resources>
        <SolidColorBrush x:Key="SolidColor" Color="Red"/>
    </Window.Resources>
    <Grid>
        <StackPanel>
            <Button Content="Update" Margin="10" Click="Button_Click"/>
            <Button Margin="10" Height="40" BorderBrush="{StaticResource SolidColor}" BorderThickness="4"/>
            <Button Margin="10" Height="40" BorderBrush="{DynamicResource SolidColor}" BorderThickness="4"/>
        </StackPanel>
    </Grid>
</Window>
